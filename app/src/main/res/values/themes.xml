<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="movie_name_tv">
        android:layout_gravity="center"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"</style>
    <style name="year_tv">
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="16sp"</style>
    <style name="director_tv">
        android:includeFontPadding="false"
        android:textSize="16sp"</style>
    <style name="actors_name_tv">
        android:includeFontPadding="false"
        android:textSize="14sp"</style>
</resources>