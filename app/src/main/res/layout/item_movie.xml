<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/cardview_light_background"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_title_tv"
                style="@style/movie_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Андрей Рублев" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/movie_year_tv"
                style="@style/year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(1966)" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:id="@+id/director_name_tv"
            style="@style/director_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/director_name" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/actors_name_tv"
            style="@style/actors_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/actors_name" />
    </LinearLayout>

</androidx.cardview.widget.CardView>